<!--pages/user/user.wxml-->
<view class="container">
	<!-- 账号信息卡片 -->
	<view class="card">
		<view class="avatar-row">
			<image class="avatar" src="{{avatarUrl}}" mode="aspectFill" wx:if="{{avatarUrl}}"/>
			<view class="avatar-placeholder" wx:if="{{!avatarUrl}}">无头像</view>
		</view>
		<view class="row">
			<text class="label">昵称：</text>
			<text class="value">{{nickname || '--'}}</text>
		</view>
		<view class="row">
			<text class="label">OpenID：</text>
				<text class="value" bindtap="copyOpenId">{{openId || '--'}}</text>
		</view>
		<view class="actions">
			<button type="default" size="mini" bindtap="getProfile">获取昵称头像</button>
		</view>
	</view>

	<!-- 角色信息卡片 -->
	<view class="card">
		<view class="row">
			<text class="label">角色：</text>
			<text class="value">{{isSales ? '销售' : '普通用户'}}</text>
		</view>
		<view class="row" wx:if="{{isSales}}">
			<text class="label">说明：</text>
			<text class="value">可在“商品”页使用“选择分享/打包转发”功能推荐商品</text>
		</view>
	</view>

	<!-- 推荐给好友（转发）临时入口 -->
	<view class="card">
		<view class="row">
			<text class="label">推荐：</text>
			<text class="value">将小程序转发给好友，建立推荐关系</text>
		</view>
		<view class="actions">
			<button type="primary" size="mini" open-type="share">推荐给好友</button>
		</view>
	</view>

	<!-- 说明 -->
	<view class="tips">
			<text>说明：OpenID 会自动获取；点击 OpenID 可复制；“获取昵称头像”需用户主动授权。</text>
	</view>
</view>