/* pages/user/user.wxss */
.container {
	padding: 24rpx;
}
.card {
	background: #fff;
	border-radius: 12rpx;
	padding: 24rpx;
	border: 1rpx solid #eaeaea;
	box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.avatar-row {
	display: flex;
	align-items: center;
	margin-bottom: 16rpx;
}
.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	background: #f2f2f2;
}
.avatar-placeholder {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #ff4d4f; /* 无头像时提示醒目 */
	background: #f9f9f9;
	font-size: 24rpx; /* 修正父级 font-size:0 造成文字不可见 */
	font-weight: 500;
}
.avatar-btn-ghost {
	padding: 0;
	margin: 0;
	background: transparent;
	border: none;
	display: block;
	text-align: left;
	font-size: 0; /* 避免按钮内联高度影响布局 */
}
.avatar-btn-ghost::after {
	border: none; /* 去掉按钮默认边框效果 */
}
.row {
	display: flex;
	align-items: center;
	gap: 12rpx;
}
.label {
	color: #666;
}
.value {
	color: #333;
	word-break: break-all;
}
.actions {
	margin-top: 16rpx;
	display: flex;
	gap: 16rpx;
}
.tips {
	margin-top: 24rpx;
	color: #888;
	font-size: 24rpx;
}

/* OpenID 底部居中小字体 */
.openid-footer {
	text-align: center;
	font-size: 22rpx;
	color: #888;
	margin: 16rpx 0 24rpx;
}

/* 新的头像+昵称同排布局 */
.profile-row {
	display: flex;
	align-items: center;
	gap: 24rpx; /* 头像与输入之间合理间距 */
	padding-left: 36rpx; /* 头像不贴左侧，同时减少过多内边距 */
}
.profile-fields {
	flex: 1;
}
.nick-input {
	border: 1rpx solid #e0e0e0;
	padding: 12rpx 20rpx;
	border-radius: 8rpx;
	background: #fafafa;
	margin-left: 0; /* 取消过度左移，避免压到头像区域 */
}
