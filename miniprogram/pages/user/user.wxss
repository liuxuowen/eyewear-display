/* pages/user/user.wxss */
.container {
	padding: 24rpx;
}
.card {
	background: #fff;
	border-radius: 12rpx;
	padding: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.avatar-row {
	display: flex;
	align-items: center;
	margin-bottom: 16rpx;
}
.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	background: #f2f2f2;
}
.avatar-placeholder {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #999;
	background: #f2f2f2;
}
.row {
	display: flex;
	align-items: center;
	gap: 12rpx;
}
.label {
	color: #666;
}
.value {
	color: #333;
	word-break: break-all;
}
.actions {
	margin-top: 16rpx;
	display: flex;
	gap: 16rpx;
}
.tips {
	margin-top: 24rpx;
	color: #888;
	font-size: 24rpx;
}
