/* pages/user/user.wxss */
page {
  background: #F6F7FB;
}

/* 自定义导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: transparent;
  z-index: 1000;
}
.nav-row {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center; /* 标题居中 */
}
.nav-title {
  position: absolute;
  left: 304rpx; /* 152px * 2 */
  width: 144rpx; /* 72px * 2 */
  height: 52rpx; /* 26px * 2 */
  
  font-family: 'Source Han Sans CN';
  font-size: 36rpx; /* 18px * 2 */
  font-weight: 500;
  text-align: center;
  letter-spacing: 0px;
  color: #333333;
  z-index: 10;
}

.container {
  padding: 24rpx;
}
.profile-card {
  position: relative;
  width: 702rpx; /* 351px */
  height: 220rpx; /* 90px */
  border-radius: 18rpx; /* 9px */
  background: #FFFFFF;
  margin-top: 16rpx;
  box-sizing: border-box;
  /* Keep padding for content alignment */
  padding: 0 24rpx;
  /* display: flex; Removed to allow absolute positioning of children without flex interference */
  /* align-items: center; */
  border: 1rpx solid rgba(255, 255, 255, 0.2); /* Optional: subtle border */
  box-shadow: 0px 10px 20px 0px rgba(185, 185, 185, 0.3);
}

.profile-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  border-radius: 18rpx;
  background-repeat: repeat-y;
  background-size: 100% auto;
  -webkit-mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%);
  mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%);
}

.profile-gradient {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  border-radius: 18rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.08) 100%);
  pointer-events: none;
}

.profile-row {
  position: absolute;
  top: 24rpx; /* 12px padding top */
  left: 0rpx; /*  */
  right: 24rpx;
  display: flex;
  align-items: center;
  z-index: 2;
}

.id-card {
  position: absolute;
  left: 24rpx; /* 12px (Aligned with padding) */
  top: 100rpx; /* 50px */
  width: 654rpx; /* 327px */
  height: 80rpx; /* 40px */
  border-radius: 18rpx; /* 9px */
  opacity: 1;
  background: linear-gradient(180deg, #000000 0%, #444444 100%);
  box-shadow: 0px 20rpx 40rpx 0px rgba(185, 185, 185, 0.1);
  z-index: 3;
}

.id-text {
  position: absolute;
  left: 20rpx; /* 10px */
  top: 28rpx; /* 14px (64px - 50px) */
  width: 490rpx; /* 245px */
  height: 24rpx; /* 12px */
  font-family: 'Source Han Sans CN', 'Source Han Sans';
  font-size: 24rpx; /* 12px */
  font-weight: normal;
  line-height: 24rpx; /* 12px */
  letter-spacing: 0px;
  font-variation-settings: "opsz" auto;
  color: #FFFFFF;
  opacity: 1;
}

.copy-icon {
  position: absolute;
  left: 598rpx; /* 299px */
  top: 24rpx; /* 12px (62px - 50px) */
  width: 32rpx; /* 16px */
  height: 32rpx; /* 16px */
  opacity: 1;
}


.avatar-btn-ghost {
  position: relative; /* For badge positioning */
  width: 80rpx !important;
  height: 80rpx !important;
  /* border-radius: 40rpx; Removed to allow badge in corner to be visible */
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  display: block;
  text-align: left;
  font-size: 0;
  flex: none;
  overflow: visible;
}

.avatar {
  width: 80rpx; /* 40px */
  height: 80rpx; /* 40px */
  border-radius: 40rpx;
  background: #f2f2f2;
}

.avatar-badge {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 24rpx; /* 12px */
  height: 24rpx; /* 12px */
}

.card {
  background: #fff;
  border-radius: 12rpx;
  /* Top 108px - Nav(~88px) - ContainerPad(12px) = 8px = 16rpx */
  margin-top: 16rpx;
  /* Card Padding: Top 10px (20rpx), Left 12px (24rpx) */
  padding: 20rpx 24rpx;
  border: 1rpx solid #eaeaea;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.avatar-btn-ghost::after {
	border: none; /* 去掉按钮默认边框效果 */
}
.row {
	display: flex;
	align-items: center;
	gap: 12rpx;
}
.label {
	color: #666;
}
.value {
	color: #333;
	word-break: break-all;
}

