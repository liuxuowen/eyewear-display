/* 悬浮客服按钮 */
.float-kf {
  position: fixed;
  right: 50rpx;
  bottom: 200rpx;
  z-index: 1101;
  width: 150rpx !important;
  height: 96rpx !important;
  border-radius: 0;
  background: transparent;
  padding: 0;
  border: none !important;   /* 移除按钮本体边框 */
  box-shadow: none;
  display: flex;            /* 居中图标，避免偏移造成“椭圆”视觉错觉 */
  align-items: center;
  justify-content: center;
  line-height: normal;      /* 避免按钮默认行高影响高度计算 */
}

.float-kf::after {
  border: none !important;   /* 去掉小程序按钮 plain 默认发丝线边框 */
  content: none !important;  /* 直接移除伪元素，避免缩放造成椭圆 */
  transform: none !important;
}

.float-kf-img {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 0;
}

/* Background Styles */
.fixed-header-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 345rpx; /* 172.5px - Match container padding-top */
  z-index: 90; /* Higher than product list (default 0), lower than toolbar (99) */
  background: #fff; /* Opaque background to hide scrolling content */
  overflow: hidden; /* Clip the background image */
}

.page-bg-img {
  position: absolute;
  left: -14rpx; /* -7px */
  top: -22rpx; /* -11px */
  width: 772rpx; /* 386px */
  height: 780rpx; /* 390px */
