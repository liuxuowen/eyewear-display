  font-size: 36rpx; /* 18px */
  font-weight: 500;
  text-align: center;
  letter-spacing: 0px;
  color: #333333;
  z-index: 10;
  line-height: normal;
}

.search-toolbar {
  position: fixed;
  top: 216rpx; /* 108px */
  left: 0;
  width: 100%;
  padding: 0 24rpx; /* 12px padding to match design */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  z-index: 99;
}

.search-box {
  position: relative;
  height: 72rpx; /* 36px */
  background: #FFFFFF;
  border: 2rpx solid #B8B8B8; /* 1px */
  border-radius: 34rpx; /* 17px */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 0 24rpx; /* Left 12px */
  width: 100%; /* Default full width */
}

.search-box.sales-mode {
  width: 486rpx; /* 243px */
}

.search-input {
  flex: 1;
  height: 100%;
  min-width: 0;
  background: transparent;
  border: none;
  font-family: 'Source Han Sans CN', 'Source Han Sans';
  font-size: 24rpx; /* 12px */
