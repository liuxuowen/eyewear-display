/* index.wxss */
.custom-nav {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;
  background: transparent;
}

.nav-row {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  position: absolute;
  left: 340rpx; /* 170px */
