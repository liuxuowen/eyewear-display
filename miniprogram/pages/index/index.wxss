  mask-image: linear-gradient(180deg, rgba(0,0,0,0.08) 0%, rgba(0,0,0,0) 100%);
}

/* Selection Bar */
.selection-bar {
  position: fixed;
  left: 0;
  /* 使用 px 单位与底部 tab bar 高度 (50px) 保持一致，避免 rpx 在不同宽度屏幕下换算偏差导致遮挡或缝隙 */
  bottom: calc(50px + env(safe-area-inset-bottom));
  width: 100%;
  height: 108rpx; /* 54px */
  background: #FFFFFF;
  z-index: 1000;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
