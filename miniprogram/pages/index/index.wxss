/* index.wxss */
.custom-nav {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-row {
  height: 100%;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative; /* 供覆盖层定位 */
}

.search-input {
  flex: 1;
  font-size: 24rpx;
  min-width: 0; /* 允许在小屏时收缩，避免与按钮重叠 */
  /* 给输入框加个细边框，更明显的分辨边界 */
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 12rpx;
  background: #fff;
  margin-right: 8rpx; /* 与重置按钮的间距 */
}

.search-clear {
  position: static; /* 改为流式布局，不再绝对定位 */
  transform: none;
  color: #666;
  font-size: 24rpx;
  padding: 0 12rpx;
  z-index: 2;
  background: #fff;
  /* 给按钮加个细边框 */
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  white-space: nowrap; /* 防止文字换行 */
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.container {
  padding: 20rpx;
}

.sales-toolbar {
  position: sticky;
  z-index: 1001;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.result-info {
  display: flex;
  align-items: center;
}

.result-count {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.toolbar-right {
  display: flex;
  align-items: center;
}

/* 工具栏按钮统一尺寸与间距 */
.toolbar-btn {
  min-width: 160rpx;
  height: 60rpx !important;
  line-height: 60rpx !important;
  padding: 0 24rpx !important;
  font-size: 26rpx !important;
  border-radius: 30rpx !important; /* 圆角更美观 */
  margin: 0 !important;
}

/* 两个各占50%的按钮容器 */
.two-btns {
  display: flex;
  gap: 16rpx;
}
.toolbar-half {
  min-width: 140rpx;
  height: 60rpx !important;
  line-height: 60rpx !important;
  font-size: 26rpx !important;
  padding: 0 20rpx !important;
  border-radius: 30rpx !important;
  margin: 0 !important;
}

/* 暗色取消按钮 */
.btn-cancel {
  background-color: #33333339 !important;
  color: #fff !important;
  border: none !important;
}
.btn-cancel::after {
  border: none !important;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  border: 1rpx solid #d0d7de; /* 更明显的细边框 */
  /* 可选：在深色背景上也清晰 */
  background-clip: padding-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  align-items: flex-start; /* 确保右侧信息区域按需增高，不被图片高度限制 */
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-title {
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.product-price {
  color: #e74c3c;
  font-size: 32rpx;
  font-weight: bold;
}

.product-specs {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  font-size: 24rpx;
  color: #666;
  overflow: visible; /* 允许内部多行内容完全展示 */
}

/* 允许文字换行，避免长文本被单行截断导致“看不见”的错觉 */
.product-specs text {
  white-space: normal;
  word-break: break-word;
}
.product-specs view {
  overflow: visible;
}

/* 高亮匹配片段 */
.hl {
  color: #e74c3c;
  font-weight: bold;
}

.fav-wrap {
  margin-left: auto;
}
.fav-btn {
  line-height: 1.8;
  padding: 8rpx 16rpx;
}
.fav-on {
  color: #e74c3c;
  border-color: #e74c3c;
}
.price-row {
  margin-top: 4rpx;
}

/* 规格成对展示（两列各50%） */
.spec-pair-row { display: flex; align-items: baseline; }
.spec-item {
  width: 50%;
  box-sizing: border-box;
  display: flex;
  gap: 6rpx;
  align-items: baseline;
}
.spec-item:first-child { padding-right: 8rpx; }
.spec-item:last-child { padding-left: 8rpx; }

/* 重量 + 材质同一行（两列各50%） */
.wm-row { display: flex; align-items: flex-start; }
.weight-col, .material-col {
  width: 50%;
  box-sizing: border-box;
}
.weight-col { padding-right: 8rpx; }
.material-col { padding-left: 8rpx; display: flex; flex-wrap: wrap; gap: 6rpx 8rpx; }
.material-col .mat-label { flex: 0 0 auto; }
.mat-none { color: #999; }

/* 材质标签展示（两列） */
.mat-row { display: flex; gap: 12rpx; align-items: flex-start; }
.mat-row > text { flex: 0 0 auto; }
.mat-tags {
  flex: 1 1 auto;
  display: flex;          /* 从两列网格改为自适应换行 */
  flex-wrap: wrap;        /* 自动换行 */
  gap: 6rpx 8rpx;         /* 紧凑间距 */
}
.tag-chip {
  padding: 2rpx 10rpx;          /* 更小的内边距，降低高度与宽度 */
  border: 1rpx solid #d0d7de;   /* 细边框 */
  border-radius: 10rpx;         /* 更紧凑的圆角 */
  background: #fff;
  color: #333;
  font-size: 18rpx;             /* 更小字号 */
  width: auto;                  /* 自适应内容宽度，取消两列等宽 */
  box-sizing: border-box;
  text-align: center;
  line-height: 1.4;             /* 更紧凑的行高 */
}
.tag-chip.on {
  background: #e6f4ff;
  border-color: #1677ff;
  color: #1677ff;
}

.select-box {
  position: absolute;
  left: 12rpx;
  top: 12rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
  border: 2rpx solid #ccc;
  background: #fff;
}
.select-box.on {
  border-color: #e74c3c;
  background: #e74c3c;
}

.load-more {
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 26rpx;
}

.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #bbb;
  font-size: 24rpx;
}

/* 预留底部空间，避免被自定义 tabBar 遮挡 */
.tabbar-spacer {
  height: calc(60px + constant(safe-area-inset-bottom));
  height: calc(60px + env(safe-area-inset-bottom));
}

.assigned-tip {
  margin: 24rpx 0;
  background: #fffbe6;
  color: #8c6d1f;
  border: 1rpx solid #ffe58f;
  padding: 16rpx;
  border-radius: 8rpx;
}

/* 悬浮客服按钮 */
.float-kf {
  position: fixed;
  right: 50rpx;
  bottom: 200rpx;
  z-index: 1101;
  width: 150rpx !important;
  height: 96rpx !important;
  border-radius: 50%;
  background: #fff;
  padding: 0;
  border: none !important;   /* 移除按钮本体边框 */
  box-shadow: 0 8rpx 5rpx rgba(0,0,0,0.2);
  display: flex;            /* 居中图标，避免偏移造成“椭圆”视觉错觉 */
  align-items: center;
  justify-content: center;
  line-height: normal;      /* 避免按钮默认行高影响高度计算 */
}

.float-kf::after {
  border: none !important;   /* 去掉小程序按钮 plain 默认发丝线边框 */
  content: none !important;  /* 直接移除伪元素，避免缩放造成椭圆 */
  transform: none !important;
}

.float-kf-img {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}