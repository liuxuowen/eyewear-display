/* index.wxss */
.custom-nav {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-row {
  height: 100%;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #f6f6f6;
  border-radius: 9999rpx;
  padding: 0 90rpx 0 14rpx; /* 右侧预留空间放“清空”按钮 */
  width: 100%;
  box-sizing: border-box;
  position: relative; /* 供覆盖层定位 */
}

.search-input {
  flex: 1;
  font-size: 24rpx;
  min-width: 0; /* 允许在小屏时收缩，避免与按钮重叠 */
}

.search-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  z-index: 2; /* 确保在输入框之上可点击 */
  background: transparent;
}

.container {
  padding: 20rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-title {
  font-size: 28rpx;
  font-weight: bold;
}

.product-price {
  color: #e74c3c;
  font-size: 32rpx;
  font-weight: bold;
}

.product-specs {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  font-size: 24rpx;
  color: #666;
}

.load-more {
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 26rpx;
}

.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #bbb;
  font-size: 24rpx;
}