/* detail.wxss */
.container {
  padding-bottom: 40rpx;
}

.product-swiper {
  width: 100%;
  height: 600rpx;
  background: #fff;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.basic-info {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.model { /* legacy, kept for compatibility */ }

.model-spec-row {
  display: flex;
  align-items: baseline;
  gap: 24rpx; /* 留出一些距离 */
  flex-wrap: nowrap; /* 固定为一行 */
  margin-bottom: 10rpx;
}

.model-inline {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;      /* 更深的颜色 */
  font-weight: 600;
  flex: 1 1 0;
  min-width: 0;
}

.spec-inline {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;      /* 更深的颜色 */
  font-weight: 600;
  flex: 1 1 0;      /* 两侧各占一半 */
  min-width: 0;
}

.total-price-row {
  display: flex;
  align-items: baseline;
  gap: 24rpx;        /* 与 model-spec-row 保持一致的间距 */
  flex-wrap: nowrap; /* 固定为一行 */
}

/* total 与 price 同理处理为 50/50 */
.total {
  font-size: 28rpx;
  flex: 1 1 0;
  min-width: 0;
}

.price {
  color: #e74c3c;
  font-size: 32rpx;
  /* 颜色与字号保持不变 */
  /* 改为与 total 50/50 分栏，并在本栏内右对齐 */
  flex: 1 1 0;
  min-width: 0;
}

.specs-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.spec-item {
  display: flex;
  align-items: center;
}

.label {
  color: #666;
  font-size: 26rpx;
  min-width: 140rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
}

.notes {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.notes-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.notes-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部图片顺序展示样式 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee; /* 作为分隔线 */
  margin-bottom: 10rpx;
}

.image-gallery {
  margin-top: 0; /* 分隔线移动到标题上，避免重复 */
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 图片之间留白 */
}

.gallery-image {
  width: 100%;
  display: block;
  border-radius: 12rpx; /* 圆角更美观 */
  background: #f7f7f7; /* 加一点底色避免空白刺眼 */
}

/* Background Styles */
.page-bg-img {
  position: fixed;
  left: -14rpx; /* -7px */
  top: -22rpx; /* -11px */
  width: 772rpx; /* 386px */
  height: 780rpx; /* 390px */
  opacity: 1;
  z-index: -1;
  -webkit-mask-image: linear-gradient(180deg, rgba(0,0,0,0.08) 0%, rgba(0,0,0,0) 100%);
  mask-image: linear-gradient(180deg, rgba(0,0,0,0.08) 0%, rgba(0,0,0,0) 100%);
}
