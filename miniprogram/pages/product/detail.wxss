/* detail.wxss */
.container {
  padding-bottom: 40rpx;
}

.product-swiper {
  width: 100%;
  height: 600rpx;
  background: #fff;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.basic-info {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.model {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.price {
  color: #e74c3c;
  font-size: 36rpx;
  font-weight: bold;
}

.specs-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.spec-item {
  display: flex;
  align-items: center;
}

.label {
  color: #666;
  font-size: 26rpx;
  min-width: 140rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
}

.notes {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.notes-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.notes-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}