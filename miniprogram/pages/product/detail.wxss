.model { /* legacy, kept for compatibility */ }

.model-spec-row {
  display: flex;
  align-items: baseline;
  gap: 24rpx; /* 留出一些距离 */
  flex-wrap: nowrap; /* 固定为一行 */
  margin-bottom: 10rpx;
}

.model-inline {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;      /* 更深的颜色 */
  font-weight: 600;
  flex: 1 1 0;
  min-width: 0;
}

.spec-inline {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;      /* 更深的颜色 */
  font-weight: 600;
  flex: 1 1 0;      /* 两侧各占一半 */
  min-width: 0;
}

.total-price-row {
  display: flex;
  align-items: baseline;
  gap: 24rpx;        /* 与 model-spec-row 保持一致的间距 */
  flex-wrap: nowrap; /* 固定为一行 */
}

/* total 与 price 同理处理为 50/50 */
.total {
  font-size: 28rpx;
  flex: 1 1 0;
  min-width: 0;
}

.price {
  color: #e74c3c;
  font-size: 32rpx;
  /* 颜色与字号保持不变 */
  /* 改为与 total 50/50 分栏，并在本栏内右对齐 */
  flex: 1 1 0;
  min-width: 0;
}

.specs-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.spec-item {
  display: flex;
  align-items: center;
}

.label {
