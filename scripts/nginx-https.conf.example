## Nginx reverse proxy + HTTPS example
# Usage: Replace example.com, backend port, and static path, then copy to /etc/nginx/sites-available/
#        ln -s to sites-enabled, nginx -t, and systemctl reload nginx.
# This config assumes your backend listens on 127.0.0.1:5000 and serves API under /api/.

map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
  listen 80;
  listen [::]:80;
  server_name example.com;

  # Redirect all HTTP to HTTPS
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name example.com;

  # Replace with your cert paths (managed by certbot typically)
  ssl_certificate /etc/letsencrypt/live/example.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/example.com/privkey.pem;
  ssl_session_cache shared:SSL:50m;
  ssl_session_timeout 1d;
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_prefer_server_ciphers on;

  # Security and performance
  server_tokens off;
  client_max_body_size 10m;
  keepalive_timeout 65;
  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  gzip on;
  gzip_types text/plain text/css application/json application/javascript application/x-javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml;

  # Optional: Strict-Transport-Security (also set by app)
  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

  # Static images (served directly by Nginx)
  location /static/images/ {
    alias /var/www/resource/products_img/;
    autoindex off;
    access_log off;
    gzip off;      # avoid compression-related length issues for binaries
    aio off;       # stability for some filesystems/clients
    add_header Cache-Control "public, max-age=31536000, immutable";
    # If many files lack extension and are actually JPEGs, you can force content type:
    # types {}
    # default_type image/jpeg;
  }

  # Health check pass-through
  location = /healthz {
    proxy_pass http://127.0.0.1:5000/healthz;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
  }

  # API reverse proxy
  location /api/ {
    proxy_pass http://127.0.0.1:5000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_read_timeout 60s;
  }

  # Optional: default 404 for other paths
  location / {
    return 404;
  }
}
