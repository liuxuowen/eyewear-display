## Nginx reverse proxy (HTTP-only) example (listens on 8080)
# Use this while your domain/HTTPS is not ready. It proxies /api and /healthz
# to your backend on 127.0.0.1:5000, and serves images under /static/images/.
#
# Copy to /etc/nginx/sites-available/eyewear-http.conf, then:
#   ln -s /etc/nginx/sites-available/eyewear-http.conf /etc/nginx/sites-enabled/
#   nginx -t && systemctl reload nginx

map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
  listen 8080;
  listen [::]:8080;
  server_name _;

  server_tokens off;
  client_max_body_size 10m;
  keepalive_timeout 65;
  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  gzip on;
  gzip_types text/plain text/css application/json application/javascript application/x-javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml;

  # Static images (served directly by Nginx)
  location /static/images/ {
    alias /var/www/resource/products_img/;
    autoindex off;
    access_log off;
    gzip off;      # avoid compression-related length issues for binaries
    aio off;       # stability for some filesystems/clients
    add_header Cache-Control "public, max-age=31536000, immutable";
    # If many files lack extension and are actually JPEGs, you can force content type:
    # types {}
    # default_type image/jpeg;
  }

  # Health check pass-through
  location = /healthz {
    proxy_pass http://127.0.0.1:5000/healthz;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto http;
  }

  # API reverse proxy
  location /api/ {
    proxy_pass http://127.0.0.1:5000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto http;
    proxy_read_timeout 60s;
  }

  # Optional: default 404 for other paths
  location / {
    return 404;
  }
}
